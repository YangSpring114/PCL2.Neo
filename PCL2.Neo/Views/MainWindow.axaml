                                Margin="5,0"
                                Name="BtnTitleSelect4"
                                Padding="2,0"
                                Tag="4"
                                Text="{DynamicResource LangTitleOther}" />
                        </StackPanel>
                    </Border>

                    <Grid Grid.Row="1" Name="PanMain">
                        <StackPanel Orientation="Vertical">
                            <pc:MyButton Margin="100" />
                            <pc:MyButton Margin="100" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
